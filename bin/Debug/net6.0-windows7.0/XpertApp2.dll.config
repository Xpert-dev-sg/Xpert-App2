<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
  <configSections>
    <!--log4net配置-->
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <!--log4net配置-->
  <log4net>
    <!--定义输出到文件中-->
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--定义文件存放位置-->
      
      <file value="Logs\logfile"/>
      <!--如果放在Debug下,当然名字你可以改 -->
      <!--<file value="log//logfile.txt"/>-->
      <appendToFile value="true"/>
      <rollingStyle value="Composite"/>
      <!--备份log文件的个数最多10个-->
      <maxSizeRollBackups value="900" />
      <!--每个log文件最大是2M，如果超过2M将重新创建一个新的log文件，并将原来的log文件备份。-->
      <maximumFileSize value="5MB" />
      <datePattern value="yyyyMMdd-HH:mm:ss"/>
      <layout type="log4net.Layout.PatternLayout">
        <!--输出格式-->
        <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
        <conversionPattern value="%date [%thread] %-5level %logger property:[%property{NDC}] - ：%message%newline"/>
      </layout>
    </appender>
    <!--定义日志的输出媒介-->
    <root>
      <!--指定将此级别及以上的log打印到log文件中-->
      <level value="All"/>
      <!--文件形式记录日志-->
      <appender-ref ref="LogFileAppender"/>
    </root>
  </log4net>

  <appSettings>
    <add key="DBConnectionString" value="Data Source=XpertDB.db"/>
    <add key="SystemMail" value="wangyiwater77@163.com"/>
    <add key="SystemMenuInterval" value="15"/>
    <add key="SystemMenuInterval_admin" value="60"/>
  </appSettings>
</configuration>